<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:padding="@dimen/small_padding" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/normal_margin" android:layout_marginBottom="@dimen/normal_margin"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:layout_gravity="center_horizontal" android:layout_width="@dimen/extra_large_margin" android:layout_height="@dimen/extra_large_margin" android:layout_marginTop="@dimen/normal_margin" android:src="@drawable/happy_mascot" />
    <TextView android:textSize="@dimen/normal_text" android:textColor="@color/colorPrimary" android:gravity="center" android:layout_gravity="center" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/FollowUs" />
    <TextView android:textColor="@color/colorAccent" android:gravity="center" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/small_margin" android:layout_marginBottom="@dimen/small_margin" android:text="@string/FollowUsMessage" />
    <Button android:layout_gravity="center_horizontal" android:id="@+id/action_followOnTwitter" android:layout_width="@dimen/followus_button_width" android:layout_height="wrap_content" android:layout_marginTop="@dimen/big_margin" android:text="Twitter" style="@style/Widget.AppCompat.Button.Colored" />
    <Button android:layout_gravity="center_horizontal" android:id="@+id/action_followOnTelegram" android:layout_width="@dimen/followus_button_width" android:layout_height="wrap_content" android:layout_marginTop="@dimen/small_margin" android:text="Telegram" style="@style/Widget.AppCompat.Button.Colored" />
    <Button android:layout_gravity="center_horizontal" android:id="@+id/action_followOnFacebook" android:layout_width="@dimen/followus_button_width" android:layout_height="wrap_content" android:layout_marginTop="@dimen/small_margin" android:layout_marginBottom="@dimen/normal_margin" android:text="Facebook" style="@style/Widget.AppCompat.Button.Colored" />
</LinearLayout>